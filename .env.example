## Postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=bubble_user
POSTGRES_PASSWORD=bubble_password
POSTGRES_DB=bubble_db
DATABASE_URL="postgresql://bubble_user:bubble_password@localhost:5432/bubble_db?schema=public"

## Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

## App
NODE_ENV=development
PORT=3000
WORKER_PORT=3001
CORS_ORIGIN=http://localhost:4200

## Auth (REQUIRED — app refuses to start with default values)
JWT_SECRET=replace_with_strong_random_secret
ADMIN_API_KEY=replace_with_strong_random_key

## Dev Seed (optional — only used when NODE_ENV=development)
SEED_ADMIN_EMAIL=admin@bubble.io
SEED_ADMIN_PASSWORD=Admin123!

## Email (SMTP — use Mailtrap/Ethereal for dev, SendGrid SMTP or AWS SES SMTP for production)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@bubble.app
FRONTEND_URL=http://localhost:4200
INVITATION_EXPIRY_HOURS=72

## LLM
GEMINI_API_KEY=replace_with_real_key
